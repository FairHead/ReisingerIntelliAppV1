<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="ReisingerIntelliAppV1.Views.FloorManager.AddBuildingPage"
             xmlns:viewModels="clr-namespace:ReisingerIntelliAppV1.Model.ViewModels"
             Title="AddBuildingPage"
             x:Name="RootPage">
    <ContentPage.BindingContext>
        <viewModels:BuildingEditorViewModel />
    </ContentPage.BindingContext>
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="16">
            <Label Text="Gebaeudename" FontAttributes="Bold" />
            <Entry Text="{Binding BuildingName}" Placeholder="Name des Gebaeudes" />

            <Label Text="Stockwerke" FontAttributes="Bold" />
            <CollectionView ItemsSource="{Binding Floors}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Frame Padding="10" Margin="0,5">
                            <VerticalStackLayout>
                                <HorizontalStackLayout>
                                    <Entry Text="{Binding Name}" Placeholder="Stockwerksname" />
                                    <Button Text="-" Command="{Binding BindingContext.RemoveFloorCommand, Source={x:Reference RootPage}}" CommandParameter="{Binding .}" />
                                </HorizontalStackLayout>
                                <Button Text="PDF-Bauplan hochladen" Command="{Binding BindingContext.UploadPdfCommand, Source={x:Reference RootPage}}" CommandParameter="{Binding .}" />
                                <Label Text="{Binding PdfPath}" FontSize="12" TextColor="Gray" />
                            </VerticalStackLayout>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Button Text="Stockwerk hinzufuegen" Command="{Binding AddFloorCommand}" />
            <Button Text="Speichern" x:Name="SaveButton" Clicked="SaveButton_Clicked" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
